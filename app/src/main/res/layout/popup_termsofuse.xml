<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="400dp"
    android:layout_gravity="center">

    <View
        android:layout_width="375dp"
        android:layout_height="500dp"
        android:background="@drawable/rect_panel_rounded"
        android:elevation="1dp"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:elevation="4dp"></TextView>

    <TextView
        android:id="@+id/txt_consent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="left"
        android:text='\n\nAll giveaways in app are free. No purchase necessary.\n\n*Each giveaway has 1 winner.\n*Certain giveaways have multiple copies and more than one winner, 1 item max per person for each giveaway.\n*Each giveaway has a fixed closing time.\n*Prizes will be sent within 30 business days after address has been confirmed, if we are unable to fulfill within that period, our representative will notify you of the delay.\n\nIf you would like to use the app, please review and consent to the following:\n"Giveaway rules", "Terms of use"'
        android:textSize="12dp"
        android:elevation="4dp"
        />

    <Button
        android:id="@+id/consentbtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="#DE3163"
        android:clickable="true"
        android:text="I AGREE"
        android:textColor="#ffffff"
        android:elevation="4dp" />

</RelativeLayout>