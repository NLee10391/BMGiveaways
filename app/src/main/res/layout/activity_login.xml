<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gold_foil_banner"> option: #3D5F75
    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="800dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="135dp"
        android:background="@drawable/textbox_shape"
        android:elevation="1dp"
        />


    <EditText
        android:id="@+id/et_Email"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_et"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:elevation="4dp" />


    <EditText
        android:id="@+id/et_Password"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_et"
        android:clickable="false"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="360dp"
        android:drawableLeft="@drawable/ic_baseline_send_24"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:background="@drawable/button_color_gold"
        android:text="Login"
        android:elevation="8dp"
        />

    <Button
        android:id="@+id/home_button"
        android:layout_width="162dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="450dp"
        android:background="@drawable/custom_bg_common"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        android:drawablePadding="0dp"
        android:text="Home"
        android:textAlignment="center"
        android:elevation="8dp"/>

    <TextView
        android:id="@+id/myview"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:elevation="6dp" />

    <TextView
        android:id="@+id/myview2"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_marginTop="297.5dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rect_panel_grey"
        android:elevation="6dp" />


</RelativeLayout>