<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#FF00BB"
                android:endColor="#D5EBAAFA"
                android:angle="180"/>
            <stroke
                android:width="2dp"
                android:color="#D1089C"/>
            <corners
                android:radius="4dp"/>
            padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ec38bc"/>
            <stroke
                android:width="1dp"
                android:color="#ec38bc"/>
            <corners
                android:radius="4dp"/>
            padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
        </shape>
    </item>
</selector>