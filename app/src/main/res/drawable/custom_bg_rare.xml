<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#1c92d2"
                android:endColor="#EDDAF2FF"
                android:angle="180"/>
            <stroke
                android:width="2dp"
                android:color="#01507A"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#1c92d2"/>
            <stroke
                android:width="1dp"
                android:color="#1c92d2"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>
</selector>