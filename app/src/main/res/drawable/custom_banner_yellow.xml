<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#FFD200"
                android:endColor="#FFD200"
                android:angle="270"/>
            <stroke
                android:width="0dp"
                android:color="#f7ff00"/>
            <corners
                android:radius="0dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#f7ff00"/>
            <stroke
                android:width="0dp"
                android:color="#f7ff00"/>
            <corners
                android:radius="0dp"/>
            padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
        </shape>
    </item>
</selector>